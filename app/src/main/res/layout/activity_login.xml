<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    tools:context="com.example.a123.mobileproject.LoginActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <TextView
        android:id="@+id/activity_login_tv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="Link Up"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="100sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Username"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginLeft="30dp"/>

        <EditText
            android:id="@+id/activity_account"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="Please enter your username"

            android:inputType="textEmailAddress"
            android:paddingLeft="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <TextView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Password"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginLeft="30dp"/>

        <EditText
            android:id="@+id/activity_pw"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:hint="Please enter your password"
            android:inputType="textWebPassword"
            android:paddingLeft="15dp"/>


    </LinearLayout>
    <Button
        android:id="@+id/activity_login_bt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="login"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/activity_guestbt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Login as Guest"
        android:textSize="30sp"></Button>

</LinearLayout>
